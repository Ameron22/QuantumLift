<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.QuantumLift" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Set black background and remove icon -->
        <item name="android:windowSplashScreenBackground">@android:color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/black</item>
        <item name="android:windowSplashScreenBrandingImage">@null</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the background color of the splash screen -->
        <item name="android:windowSplashScreenBackground">@android:color/black</item>

        <!-- Use the static drawable -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/test_square</item>

        <!-- Set the animation duration -->
        <item name="android:windowSplashScreenAnimationDuration">0</item>

        <!-- Set the theme to use after the splash screen exits -->
        <item name="android:windowSplashScreenBrandingImage">@null</item>
        <item name="postSplashScreenTheme">@style/Theme.QuantumLift</item>
    </style>
</resources>